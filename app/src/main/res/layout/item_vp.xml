<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <ImageView
       android:src="@drawable/img_3"
       android:id="@+id/vp_img"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@id/vp_text"
       android:layout_width="match_parent"
       android:layout_height="0dp"/>


   <TextView
       android:layout_marginBottom="20dp"
       android:textSize="40sp"
       android:textColor="@color/black"
       android:textStyle="bold"
       app:layout_constraintTop_toBottomOf="@id/vp_img"
       android:text="djcbsjhvcjavcac"
       android:gravity="center"
       android:id="@+id/vp_text"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@id/vp_text2"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>


   <TextView
       android:textColor="@color/black"
       android:layout_marginBottom="60dp"
       android:textSize="20sp"
       android:gravity="center"
       android:id="@+id/vp_text2"
       app:layout_constraintTop_toBottomOf="@id/vp_text"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>