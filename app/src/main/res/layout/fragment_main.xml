<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.main.MainFragment">

    <LinearLayout
        android:background="@color/black"
        android:paddingHorizontal="20sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:textColorHint="@color/gray"
            android:background="@drawable/input_types"
            android:textStyle="bold"
            android:id="@+id/ed_fname"
            android:layout_marginTop="260dp"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:hint="@string/first_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <EditText
            android:textColorHint="@color/gray"
            android:background="@drawable/input_types"
            android:textStyle="bold"
            android:id="@+id/ed_sname"
            android:layout_marginTop="20sp"
            android:textColor="@color/white"
            android:hint="@string/second_name"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


        <Button
            android:textStyle="bold"
            android:id="@+id/btn_calculate"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:text="@string/calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_history"
        android:src="@drawable/ic_baseline_change_history_24"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/txt_history"
        android:textColor="@color/white"
        android:text="@string/history"
        app:layout_constraintEnd_toEndOf="@id/img_history"
        app:layout_constraintTop_toBottomOf="@id/img_history"
        app:layout_constraintStart_toStartOf="@id/img_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>